<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

  <TextView
      android:text="position"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/positions_in_progress_cell_name"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp"
      android:layout_marginTop="5dp"
      android:textStyle="bold"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintEnd_toStartOf="@+id/imageView2"
      android:layout_marginEnd="8dp"/>
  <TextView
      android:text="company"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/positions_in_progress_cell_company"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:textStyle="normal"
      app:layout_constraintTop_toBottomOf="@+id/positions_in_progress_cell_name"
      app:layout_constraintEnd_toStartOf="@+id/imageView2"
      android:layout_marginEnd="8dp"/>
  <TextView
      android:text="profiles"
      android:layout_width="0dp"
      android:layout_height="wrap_content"
      android:id="@+id/positions_in_progress_cell_profiles_count"
      app:layout_constraintStart_toStartOf="parent"
      android:layout_marginStart="16dp"
      android:layout_marginTop="8dp"
      android:textStyle="italic"
      android:textColor="@color/colorPrimaryDark"
      app:layout_constraintTop_toBottomOf="@+id/positions_in_progress_cell_company"
      app:layout_constraintEnd_toStartOf="@+id/imageView2"
      android:layout_marginEnd="8dp"
      android:layout_marginBottom="8dp"
      app:layout_constraintBottom_toBottomOf="parent"/>
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      app:srcCompat="@android:drawable/ic_menu_edit"
      android:id="@+id/imageView2"
      android:tint="@color/colorAccent"
      app:layout_constraintEnd_toEndOf="parent"
      android:foregroundGravity="center_vertical"
      android:layout_marginEnd="8dp" android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
      android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
  <View
      android:layout_width="0dp"
      android:layout_height="1dp"
      android:id="@+id/bottom_line"
      android:background="@color/bottomLineColor"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintStart_toStartOf="parent"
      app:layout_constraintEnd_toEndOf="parent"
      android:layout_marginStart="16dp"/>
</android.support.constraint.ConstraintLayout>