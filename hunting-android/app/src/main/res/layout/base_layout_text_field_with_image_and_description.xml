<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
  <ImageView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="16dp"
      android:layout_marginBottom="4dp"
      android:layout_marginTop="4dp"
      android:tint="@color/darkIconColor"
      android:id="@+id/text_field_image_description_icon_image"
      app:srcCompat="@drawable/ic_profile_24dp"/>
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_marginStart="8dp"
      android:layout_gravity="center_vertical"
      android:text="Description:"
      android:textStyle="bold"
      android:id="@+id/text_field_image_description_name"
  />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_weight="1"
      android:layout_marginStart="8dp"
      android:layout_gravity="center_vertical"
      android:id="@+id/text_field_image_description_value"
      android:text="My Description"
  />
</LinearLayout>